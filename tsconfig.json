{
  "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "skipLibCheck": true,
      "baseUrl": "src",
      "outDir": "dist",
      "noImplicitAny": true,
      "sourceMap": true,
      "target": "es2020" // or higher
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./types/**/*", "./types"]
}